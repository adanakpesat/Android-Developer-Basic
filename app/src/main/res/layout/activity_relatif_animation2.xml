<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".relatifAnimationActivity2">
    
    
    <ImageView
        android:id="@+id/larva"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/larva"
        android:layout_centerHorizontal="true"
        /> 
        
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />
        
    <TextView
        android:id="@+id/textlarva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Larva kuning"
        android:layout_below="@+id/larva"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 24.50"
        android:layout_below="@+id/textlarva"
        android:textSize="35dp"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    
    <ImageButton
        android:id="@+id/favorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/baseline_favorite_24"
        android:layout_below="@+id/textlarva"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        />

    <ImageButton
        android:id="@+id/star1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@+id/harga"
        android:layout_marginStart="10dp"
        android:backgroundTint="#FFC107"
        />

    <ImageButton
        android:id="@+id/star2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@+id/harga"
        android:backgroundTint="#FFC107"
        android:layout_toRightOf="@+id/star1"
        />

    <ImageButton
        android:id="@+id/star3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@+id/harga"
        android:backgroundTint="#FFC107"
        android:layout_toRightOf="@+id/star2"
        />

    <ImageButton
        android:id="@+id/star4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@+id/harga"
        android:backgroundTint="#FFC107"
        android:layout_toRightOf="@+id/star3"
        />

    <ImageButton
        android:id="@+id/star5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_star_24"
        android:layout_below="@+id/harga"
        android:backgroundTint="#BFBDB5"
        android:layout_toRightOf="@+id/star4"
        />

    <TextView
        android:id="@+id/empatpuluh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.0"
        android:textSize="18dp"
        android:textColor="#F11C1C"
        android:layout_below="@+id/harga"
        android:layout_toRightOf="@+id/star5"
        android:layout_marginStart="10dp"
        />

    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/empatpuluh"
        android:layout_marginTop="30dp"
        android:background="#8A8585"
        />

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textSize="18dp"
        android:layout_below="@+id/garis"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/tipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipe"
        android:textSize="18dp"
        android:layout_below="@+id/brand"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/dimensions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensions"
        android:textSize="18dp"
        android:layout_below="@+id/tipe"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/banpresto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brandpresto"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_below="@+id/garis"
        android:layout_marginTop="25dp"
        android:layout_marginStart="90dp"
        android:layout_toRightOf="@+id/brand"
        />

    <TextView
        android:id="@+id/oposket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oposket arale nokimaki"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_below="@+id/banpresto"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_toRightOf="@+id/tipe"
        />



    <TextView
        android:id="@+id/kalikali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 x 4.5 + 3.9"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_below="@+id/oposket"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_toRightOf="@+id/tipe"
        />

    <Button
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:text="Purchase"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#673AB7"
        />

    
    
</RelativeLayout>
