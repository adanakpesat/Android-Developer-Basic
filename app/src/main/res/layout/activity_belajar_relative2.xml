<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".belajarRelativeActivity2">

    <TextView
        android:id="@+id/kiriatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kiri atas"
        android:textColor="#873CAF"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/kananatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="kanan atas"
        android:textColor="#873CAF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tengahatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tengah atas"
        android:textColor="#873CAF"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/kiritengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kiri tengah"
        android:textColor="#873CAF"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tengahtengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="tengah tengah"
        android:textColor="#873CAF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/kanantengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kanan tengah"
        android:textColor="#873CAF"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/kiribawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kiri bawah"
        android:textColor="#873CAF"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/tengahbawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tengah bawah"
        android:textColor="#873CAF"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/kananbawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kanan bawah"
        android:textColor="#873CAF"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>