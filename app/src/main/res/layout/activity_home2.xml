<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/kopi22"
    android:gravity="center"
    tools:context=".HomeActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ngopi yuu"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnpindah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#7434DD"
        android:text="pindah halaman"
        android:layout_gravity="center"
        app:icon="@drawable/baseline_keyboard_arrow_right_24"
        android:layout_marginEnd="10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnshare"
        app:icon="@drawable/baseline_share_24"
        android:text="share"
        android:backgroundTint="#12BA15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />



    </LinearLayout>

</LinearLayout>