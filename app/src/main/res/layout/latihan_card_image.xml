<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivdes"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/swiss_destination"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/ivlokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niesen"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_below="@+id/ivdes"
                android:layout_centerHorizontal="true"
                />



            <TextView
                android:id="@+id/tvdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazing view cambe enjoy from above of refreshing city"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_below="@+id/ivlokasi"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:id="@+id/lok"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_location_on_24"
                android:scaleType="centerCrop"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/tvdes"
                />

            <TextView
                android:id="@+id/tekslok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switzerland"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_below="@+id/tvdes"
                android:layout_toRightOf="@+id/lok"
                android:layout_marginTop="17dp"
                android:layout_marginStart="5dp"
                />

            <ImageView
                android:id="@+id/price"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_price_check_24"
                android:scaleType="centerCrop"
                android:layout_marginTop="15dp"
                android:layout_marginStart="23dp"
                android:layout_toRightOf="@+id/tekslok"
                android:layout_below="@+id/tvdes"
                />

            <TextView
                android:id="@+id/teksprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100/package"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_below="@+id/tvdes"
                android:layout_toRightOf="@+id/price"
                android:layout_marginTop="17dp"
                />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Plan Trip Now"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>

