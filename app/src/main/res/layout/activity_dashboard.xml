<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboardActivity">

    <ImageButton
        android:id="@+id/ibmenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_sort_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/ivbackground"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:background="@drawable/latihan_rectangle"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:id="@+id/bread"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120sp"
        android:src="@drawable/ember"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="big sale"
        android:layout_below="@+id/ibmenu"
        android:textSize="25dp"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="220dp"/>
    <TextView
        android:id="@+id/diskon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibmenu"
        android:text="10%"
        android:textSize="50dp"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="250dp"
        />

    <TextView
        android:id="@+id/limited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*limited type"
        android:layout_below="@+id/diskon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:textColor="#918888"
        />

    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/limited"
        android:layout_marginTop="30dp"
        android:background="#CCBDBD"
        />

    <TextView
        android:id="@+id/pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="popular"
        android:layout_below="@+id/garis"
        android:textSize="22dp"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/arrival"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="new arrival"
        android:layout_below="@+id/garis"
        android:textSize="22dp"
        android:textColor="#CCBDBD"
        android:textStyle="bold"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="brand"
        android:layout_below="@+id/garis"
        android:textSize="22dp"
        android:textColor="#CCBDBD"
        android:textStyle="bold"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_below="@+id/pop"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        >

    <ImageView
        android:id="@+id/truck"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/brand"
        android:background="@drawable/truk"
        />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_below="@+id/pop"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/brand"
            android:background="@drawable/piano"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/teks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MG 00 Gundam XN Raiser"
        android:layout_below="@+id/arrival"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="135dp"
        />

    <TextView
        android:id="@+id/bandai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bandai"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/teks"
        android:layout_marginStart="135dp"
        android:textColor="#C5B6B6"
        />

    <TextView
        android:id="@+id/harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 81.50"
        android:layout_below="@+id/bandai"
        android:textSize="25dp"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:layout_marginStart="135dp"
        />

    <TextView
        android:id="@+id/teks2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hulkbuster PPS005"
        android:layout_below="@+id/harga"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="135dp"
        />

    <TextView
        android:id="@+id/toys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot toys"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/teks2"
        android:layout_marginStart="135dp"
        android:textColor="#C5B6B6"
        />

    <TextView
        android:id="@+id/harga2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 539.50"
        android:layout_below="@+id/toys"
        android:textSize="25dp"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:layout_marginStart="135dp"
        />



</RelativeLayout>