<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/jdoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivgambar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/doa_harian2"
                    />

                <TextView
                    android:id="@+id/teks1"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:maxLines="2"
                    android:text="doa sebelum tidur"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <ImageButton
                    android:id="@+id/ibcollapse"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:layout_toRightOf="@+id/teks1"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />

            <RelativeLayout
                android:id="@+id/rlisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tvdoaarab"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="بِسْمِكَ اللّٰهُمَّ اَحْيَا وَاَمُوْتُ"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:maxLines="10"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tvdoalatin"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="Bismikallohumma ahya wa amuutu"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:maxLines="10"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/tvdoaarab"
                    />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>